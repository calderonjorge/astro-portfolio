<style>
  .hero {
    /* border: solid 1px red; */
    /* margin: 100px auto 0; */
    margin-top: 50px;
    height: 100vh;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    flex-direction: column;
    padding-bottom: 50px;
    /* margin-bottom: 500px; */
  }

  .title {
    /* width: 90vw; */
    /* max-width: 1400px;  */
    /* border: solid 1px red; */
    line-height: 1;
    text-wrap: balance;
    letter-spacing: -6px;
    font-size: clamp(64px, 10vw, 140px);
    /* line-height: 130px; */

    @media (max-width: 420px) {
      max-width: 960px;
      letter-spacing: -2px;
    }
  }
  .greeting{
    margin-bottom: 24px;
  }


  .m-video__video {
  display: block;
  border-radius: 5px;
  width: 100%;
  height: 100%;
  object-fit: cover;
  -webkit-clip-path: url(#clip);
  clip-path: url(#clip);
  -o-filter: blur(15px);
  filter: blur(15px);
}

.video-overlay {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 5px;
  display: flex;
  place-items: center;
  place-content: center;
  transition: opacity 3s ease;
  z-index: 2;
}
.video-overlay svg{
  width:100%;
  height:100%;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
</style>

<script>
  const section = document.querySelector(".hero")! as HTMLDivElement

  section.style.height = `${window.innerHeight - 50}px` 

  
</script>